<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorElementoFondoMM"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_contenedor">

    <View
        android:id="@+id/id_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorDividerMM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/id_titulo_elemento"
            tools:text="Personal Info"
            android:textSize="@dimen/elementTextoTituloTamanoMM"
            android:gravity="top"
            android:padding="16dp"
            android:textColor="@color/colorElementoTituloMM"/>

        <LinearLayout
            android:id="@+id/id_valor_elemento"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="200dp"
                android:background="@drawable/drawable_fondo_foto"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_valor_elemento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btnNuevaF"
            android:layout_width="0.0dip"
            android:layout_height="55sp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorHeaderFondoMM"
            android:drawableRight="@drawable/ic_not_interested_white_24dp"
            android:text="Ninguna"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:padding="7dp"
            android:foreground="?android:attr/selectableItemBackground"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnSeleccionarF"
            android:layout_width="0.0dip"
            android:layout_height="55sp"
            android:layout_marginRight="0dp"

            android:layout_weight="1"
            android:background="@color/colorHeaderFondoMM"
            android:drawableRight="@drawable/ic_photo_size_select_actual_white_24dp"
            android:text="Elegir"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:padding="7dp"/>

        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnTomarF"
            android:layout_width="0.0dip"
            android:layout_height="55sp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/colorHeaderFondoMM"
            android:drawableRight="@drawable/ic_camera_enhance_white_24dp"
            android:text="Tomar"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:padding="7dp"
            />

    </LinearLayout>

</LinearLayout>